{
    "optimizer":
    {
        "type": "SGD",
        "kwargs":
        {
            "lr": 1e-1,
            "momentum": 0.9,
            "weight_decay": 1e-4,
            "nesterov": true
        }
    },
    "scheduler":
    {
        "type": "MultiStepLR",
        "kwargs":
        {
            "milestones": [10, 20],
            "gamma": 0.1
        }
    },
    "data": 
    {
        "dataset": "CIFAR10",
        "kwargs":
        {
            "num_workers": 4,
            "pin_memory": false,
            "batch_size": 32,
            "shuffle": true
        }
    },
    "model": "resnet18",
    "num_epochs": 2,
    "save_summary_steps": 100
}